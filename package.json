{
  "name": "comics-index-api",
  "version": "1.0.0",
  "description": "",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "npm run build -- -w",
    "clean": "rm -rf dist",
    "lint": "ts-standard -p ./tsconfig.json",
    "lint:fix": "ts-standard --fix",
    "prepare": "husky install",
    "release": "standard-version",
    "start": "npm run migration:run && node .",
    "start:dev": "ts-node-dev --respawn --inspect=0.0.0.0:9229 src/index.ts",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "ava": {
    "files": [
      "!temp"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "ts-standard": {
    "ignore": [
      "build/**/*",
      "temp/**/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aagamezl/comics-index-api.git"
  },
  "keywords": [
    "GraphQL",
    "TypeScript",
    "TypeGraphQL",
    "TypeORM"
  ],
  "author": "Álvaro José Agámez Licha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aagamezl/comics-index-api/issues"
  },
  "homepage": "https://github.com/aagamezl/comics-index-api#readme",
  "dependencies": {
    "apollo-server": "^3.3.0",
    "apollo-server-core": "^3.3.0",
    "class-validator": "^0.13.1",
    "graphql": "^15.6.0",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.37"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/format": "^13.2.0",
    "@types/node": "^16.10.2",
    "ava": "^3.15.0",
    "husky": "^7.0.0",
    "sinon": "^11.1.2",
    "standard-version": "^9.3.1",
    "ts-node-dev": "^1.1.8",
    "ts-standard": "^10.0.0",
    "typescript": "^4.4.3"
  }
}
